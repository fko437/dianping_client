<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/index_gl_item_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:src="@drawable/default_pic"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/appointment_img"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/little_space"
        android:layout_marginLeft="@dimen/little_space"
        android:paddingRight="@dimen/little_space"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/index_gl_item_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:textSize="@dimen/title_text_size"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/index_gl_item_titlecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="2"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_default"
            android:text="TitleContent"
            android:paddingTop="@dimen/little_space"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/little_space">
            <TextView
                android:id="@+id/index_gl_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_orange_color"
                android:text="120"/>
            <TextView
                android:id="@+id/index_gl_item_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/index_gl_item_price"
                android:paddingLeft="@dimen/little_space"
                android:paddingStart="@dimen/little_space"
                android:text="120"/>
            <TextView
                android:id="@+id/index_gl_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_toEndOf="@id/index_gl_item_value"
                android:layout_toRightOf="@id/index_gl_item_value"
                android:layout_marginRight="@dimen/little_space"
                android:layout_marginEnd="@dimen/little_space"
                android:layout_alignParentRight="true"
                android:text="120"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>