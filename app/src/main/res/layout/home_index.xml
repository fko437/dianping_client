<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/normal_orange_color">
        <TextView
            android:id="@+id/index_top_city"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/little_space"
            android:drawableLeft="@drawable/home_ico_city"
            android:textColor="@color/white"
            android:text="@string/choose_city"
             android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:layout_centerInParent="true"
            android:padding="@dimen/normal_space"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/index_top_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_icon_scan_nor"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <GridView
        android:id="@+id/home_nav_sort"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="3"
        android:scrollbars="none"
        android:padding="5dp"
        android:background="@color/white"></GridView>
</LinearLayout>