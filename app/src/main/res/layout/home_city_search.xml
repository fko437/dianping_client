<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/location_city_bg"
        android:padding="3dp"
        android:text="@string/city_location"
        android:textColor="@color/gray"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/index_city_item_searchcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/location_arrow"
        android:paddingBottom="10.0dp"
        android:paddingLeft="12.0dp"
        android:paddingTop="10.0dp"
        android:gravity="center_vertical"
        android:text="@string/city_name"
        android:textSize="@dimen/text_size_default"/>

</LinearLayout>